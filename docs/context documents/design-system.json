{
  "name": "Prompt Battle UI Kit Design System",
  "description": "Clean, academic, workshop-friendly design with neumorphic elements for plain HTML/CSS/JS implementation",
  "version": "1.0.0",

  "colorSystem": {
    "description": "Monochromatic grayscale system with subtle gradients and high contrast",
    "lightTheme": {
      "background": "#ffffff",
      "foreground": "#0a0a0a",
      "card": "#ffffff",
      "cardForeground": "#0a0a0a",
      "primary": "#1a1a1a",
      "primaryForeground": "#fafafa",
      "secondary": "#f5f5f5",
      "secondaryForeground": "#1a1a1a",
      "muted": "#f5f5f5",
      "mutedForeground": "#737373",
      "accent": "#f5f5f5",
      "accentForeground": "#1a1a1a",
      "border": "#e5e5e5",
      "input": "#e5e5e5",
      "ring": "#a3a3a3",
      "destructive": "#dc2626",
      "success": "#16a34a",
      "warning": "#d97706"
    },
    "darkTheme": {
      "background": "#0a0a0a",
      "foreground": "#fafafa",
      "card": "#0a0a0a",
      "cardForeground": "#fafafa",
      "primary": "#fafafa",
      "primaryForeground": "#1a1a1a",
      "secondary": "#262626",
      "secondaryForeground": "#fafafa",
      "muted": "#262626",
      "mutedForeground": "#a3a3a3",
      "accent": "#262626",
      "accentForeground": "#fafafa",
      "border": "#262626",
      "input": "#262626",
      "ring": "#525252",
      "destructive": "#dc2626",
      "success": "#16a34a",
      "warning": "#d97706"
    }
  },

  "typography": {
    "description": "Clean, readable typography with Geist Sans as primary font",
    "fontFamilies": {
      "sans": "Geist, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "mono": "Geist Mono, 'SF Mono', Monaco, 'Cascadia Code', monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "lineHeights": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.625"
    },
    "fontWeights": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },

  "spacing": {
    "description": "Consistent 4px-based spacing scale",
    "scale": {
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    }
  },

  "borderRadius": {
    "description": "Rounded corners for modern, friendly appearance",
    "values": {
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.625rem",
      "xl": "1rem",
      "2xl": "1.25rem",
      "full": "9999px"
    }
  },

  "shadows": {
    "description": "Subtle neumorphic shadows for depth",
    "values": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    }
  },

  "components": {
    "AppCard": {
      "description": "Primary container with neumorphic styling",
      "styles": {
        "borderRadius": "1.25rem",
        "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "border": "1px solid rgba(229, 229, 229, 0.5)",
        "background": "linear-gradient(to bottom, var(--card), rgba(var(--card), 0.8))",
        "backdropFilter": "blur(4px)",
        "padding": "1.5rem"
      }
    },

    "AppButton": {
      "description": "Interactive button with hover effects",
      "styles": {
        "borderRadius": "1.25rem",
        "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "border": "1px solid rgba(229, 229, 229, 0.5)",
        "background": "linear-gradient(to bottom, var(--card), rgba(var(--card), 0.8))",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "transition": "all 0.2s ease",
        "cursor": "pointer"
      },
      "hoverStyles": {
        "boxShadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
        "background": "linear-gradient(to bottom, var(--accent), rgba(var(--accent), 0.8))",
        "transform": "translateY(-1px)"
      }
    },

    "Badge": {
      "description": "Small status indicators",
      "styles": {
        "borderRadius": "9999px",
        "padding": "0.25rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": "500",
        "display": "inline-flex",
        "alignItems": "center"
      },
      "variants": {
        "default": {
          "background": "var(--secondary)",
          "color": "var(--secondary-foreground)"
        },
        "success": {
          "background": "#dcfce7",
          "color": "#166534"
        },
        "warning": {
          "background": "#fef3c7",
          "color": "#92400e"
        },
        "error": {
          "background": "#fecaca",
          "color": "#991b1b"
        }
      }
    },

    "Input": {
      "description": "Form input fields",
      "styles": {
        "borderRadius": "0.625rem",
        "border": "1px solid var(--border)",
        "background": "var(--background)",
        "padding": "0.75rem 1rem",
        "fontSize": "0.875rem",
        "transition": "all 0.2s ease"
      },
      "focusStyles": {
        "outline": "2px solid var(--ring)",
        "outlineOffset": "2px",
        "borderColor": "var(--ring)"
      }
    },

    "Pill": {
      "description": "Small rounded containers for tags/tokens",
      "styles": {
        "borderRadius": "9999px",
        "padding": "0.375rem 0.75rem",
        "fontSize": "0.75rem",
        "fontWeight": "500",
        "display": "inline-flex",
        "alignItems": "center",
        "gap": "0.25rem"
      }
    }
  },

  "layoutPatterns": {
    "description": "Common layout patterns used throughout the app",
    "centerContainer": {
      "maxWidth": "28rem",
      "margin": "0 auto",
      "padding": "1rem"
    },
    "cardGrid": {
      "display": "grid",
      "gap": "1rem",
      "gridTemplateColumns": "repeat(auto-fit, minmax(300px, 1fr))"
    },
    "flexCenter": {
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "center"
    },
    "flexBetween": {
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "space-between"
    },
    "stack": {
      "display": "flex",
      "flexDirection": "column",
      "gap": "1rem"
    }
  },

  "interactions": {
    "description": "Animation and interaction patterns",
    "transitions": {
      "fast": "0.15s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    },
    "hoverEffects": {
      "lift": "transform: translateY(-2px)",
      "scale": "transform: scale(1.02)",
      "shadowIncrease": "box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    },
    "focusRing": {
      "outline": "2px solid var(--ring)",
      "outlineOffset": "2px"
    }
  },

  "accessibility": {
    "description": "Accessibility requirements and patterns",
    "colorContrast": {
      "minimum": "4.5:1 for normal text",
      "large": "3:1 for large text (18px+ or 14px+ bold)"
    },
    "focusIndicators": "Always visible focus rings on interactive elements",
    "semanticHTML": "Use proper heading hierarchy (h1-h6), landmarks, and ARIA labels",
    "screenReader": "Include sr-only text for context and live regions for dynamic content"
  },

  "responsiveBreakpoints": {
    "description": "Mobile-first responsive design breakpoints",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  },

  "implementationNotes": {
    "cssCustomProperties": "Use CSS custom properties for theming and easy light/dark mode switching",
    "mobileFirst": "Design mobile-first, then enhance for larger screens",
    "semanticHTML": "Use semantic HTML5 elements (main, section, article, nav, etc.)",
    "progressiveEnhancement": "Ensure core functionality works without JavaScript",
    "performanceOptimization": "Minimize CSS, use efficient selectors, avoid layout thrashing"
  }
}
